---
import SearchHeader from "@/components/search/SearchHeader.astro";

import LightDark from "./LightDark.astro";
import { channelsConst } from "@/constants/channels";

const { currentChannelId } = Astro.props;
---

<header
  class="w-full px-6 py-3 bg-(--color-bg-header) text-white shadow gap-4 items-center"
>
  <div class="flex gap-2 items-center justify-start">
    <a href="/" class="flex gap-2 items-center">
      <!-- <Logo
        width={40}
        height={40}
        class="w-10 h-10 rounded-full inline-block"
        fill="white"
      /> -->
      <img
        src="/img/elisawaves.webp"
        alt="Logo"
        width="40px"
        height="40px"
        class="rounded-full inline-block"
      />
      <h1 class="hidden md:block text-xl font-bold">Elisa Waves</h1>
    </a>
  </div>
  <div class="flex gap-4 items-center justify-center">
    {
      channelsConst.map((channel) => (
        <a
          href={`/media/channel/${channel.tag}`}
          class={`flex flex-col items-center gap-1 px-2 group   transition`}
        >
          <img
            src={channel.logo}
            alt="Poster del video"
            title={channel.title}
            width="40px"
            height="40px"
            class={`rounded-full ${
              currentChannelId === channel.id
                ? "opacity-100 rounded-full border-2 border-red-500"
                : "opacity-50 hover:opacity-100"
            }`}
          />
        </a>
      ))
    }
  </div>
  <div class="flex gap-2 items-center justify-end">
    <SearchHeader />
    <LightDark />
  </div>
</header>

<style>
  header {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    justify-content: space-between;
  }
</style>
