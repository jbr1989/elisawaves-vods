---
import "../styles/global.css";
import Footer from "./components/Footer.astro";

const { title, descr, bodyClass } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title || "Elisa Waves"}</title>
    {descr && <meta name="description" content={descr} />}
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="canonical" href={canonicalURL} />
    <link rel="sitemap" href="/sitemap.xml" />
    <meta name="robots" content="index, follow" />
    <!-- <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "[ElisaWaves,Elisa Waves]",
        "jobTitle": "[Actriz de doblaje,Locutora de publicidad,Streamer]",
        "url": "https://elisawaves.es",
        "sameAs": "[https://twitch.tv/elisawaves,https://www.youtube.com/elisawaves]"
      }
    </script> -->
  </head>
  <body
    class=`bg-zinc-100 text-zinc-900 dark:bg-(--color-grey) dark:text-zinc-100 ${bodyClass || ""}`
  >
    <slot />
    <Footer />
  </body>
</html>

<script>
  const theme = localStorage.getItem("theme");
  const element = document.querySelector("#theme-toggle-check");
  console.log("THEME", theme);

  if (theme === "dark") {
    document.documentElement.classList.add("dark");
    //element.checked = "checked";
  } else {
    document.documentElement.classList.remove("dark");
    element.checked = "";
  }
</script>

<style>
  body {
    font-family: "Poppins", sans-serif;
    /* background-color: var(--color-bg); */
    color: var(--color-text); /* white; */
    display: flex;
    flex-direction: column;
    align-items: center;
    /* justify-content: center; */
    min-height: 100vh;
    min-height: 100dvh; /* FIX MOBILE */
    text-align: center;
    padding: 0;
    margin: 0;
  }
  main {
    min-height: calc(100vh - 64px);
  }
  .container {
    animation: fadeIn 1.5s ease-in-out;
  }
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
