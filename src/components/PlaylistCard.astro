---
const { playlist } = Astro.props;
const { title, thumbnails } = playlist.snippet;
const image = thumbnails.medium.url;
---

<a
  href={`/playlist/${playlist.id}`}
  class="rounded-xl overflow-hidden shadow-lg hover:scale-105 transition"
>
  <img src={image} alt={title} class="w-full h-48 object-cover" />
  <div class="p-2 bg-white dark:bg-zinc-800">
    <h2 class="text-md font-semibold">{title}</h2>
  </div>
</a>
