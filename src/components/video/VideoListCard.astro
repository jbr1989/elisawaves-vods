---
import { Image } from "astro:assets";
import ThumbnailOverlay from "../thumbnail/ThumbnailOverlay.astro";

const { video } = Astro.props;

const overlays = [``];
---

<a
  href={`/media/video/${video.id}`}
  class="overflow-hidden text-[--color-text] hover:scale-105 transition"
  aria-label={`Ver video: ${video.title}`}
>
  <div class="thumbnail w-full aspect-video relative">
    <Image
      src={video.thumbnail}
      alt={`Miniatura del video: ${video.title}`}
      width={100}
      height={100}
      loading="lazy"
      decoding="async"
      fetchpriority="low"
      class="w-full object-cover rounded-xl"
    />
  </div>
  <div class="p-2">
    <h2 class="text-md font-semibold">{video.title}</h2>
  </div>
</a>
