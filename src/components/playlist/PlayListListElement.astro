---
const { video, index, selected, hasChat, seconds } = Astro.props;
---

<button
  data-video-id={video.id}
  data-chat={hasChat ? 1 : 0}
  data-seconds={seconds}
  class={`videoButton flex gap-3 hover:bg-gray-100 dark:hover:bg-zinc-800 p-2 rounded-xl transition text-left w-full cursor-pointer ${
    selected ? "videoSelected" : ""
  }`}
  onclick={`changeVideo('${index}')`}
>
  <img
    src={video.thumbnail}
    alt="Poster del video"
    width="128px"
    height="72px"
    class="h-auto rounded-lg object-cover"
  />
  <div class="flex flex-col justify-center">
    <h2 class="text-sm font-semibold leading-snug line-clamp-3">
      {video.title}
    </h2>
  </div>
</button>
