---
import Layout from "../layouts/Layout.astro";
import PlaylistCard from "../components/PlaylistCard.astro";
import { getChannels } from "../lib/youtube";

const channels = await getChannels();
---

<Layout bodyClass=" justify-center">
  <h1 class="text-3xl font-bold mb-6">¿Qué quieres ver?</h1>

  <div
    class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-3 gap-8 content-center justify-items-center"
  >
    {
      channels.map((channel) => (
        <a
          href={`/channel/${channel.id}`}
          class="group flex flex-col items-center space-y-2 hover:scale-105 transition-transform"
        >
          <img
            src={channel.thumbnail}
            alt={channel.title}
            class="max-w-72 max-h-72 rounded-full border-4 border-transparent group-hover:border-red-500 transition"
          />
          <span class="text-sm font-semibold">{channel.title}</span>
        </a>
      ))
    }
  </div>
</Layout>
